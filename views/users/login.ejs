<% layout('layouts/boilerplate')%>
<div class="container d-flex justify-content-center align-items-center mt-5">
  <div class="row w-100">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow">
        <img
          src="https://images.unsplash.com/photo-1525811902-f2342640856e?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8OHx8Y2FtcHxlbnwwfHwwfHw%3D&auto=format&fit=crop&w=500&q=60"
          alt=""
          class="card-img-top"
        />
        <div class="card-body">
          <h5 class="card-title">로그인</h5>
          <form
            action="/login"
            method="post"
            class="needs-validation"
            novalidate
          >
            <div class="mb-3">
              <label class="form-label" for="username">유저이름</label>
              <input
                class="form-control"
                type="text"
                id="username"
                name="username"
                autofocus
                required
              />
              <div class="valid-feedback">좋아요!</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="password">비밀번호</label>
              <input
                class="form-control"
                type="password"
                id="password"
                name="password"
                required
              />
              <div class="valid-feedback">좋아요!</div>
            </div>
            <div class="d-grid">
              <button class="btn btn-success">로그인</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
